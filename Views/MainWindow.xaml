<Window x:Class="Code_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Code_editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"  Style="{DynamicResource WindowStyle}">
    <Grid>
        <TextBox x:Name="EditorBox" HorizontalAlignment="Left" Margin="264,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="536" Height="237"     VerticalScrollBarVisibility="Auto" TextChanged="EditorBox_TextChanged" />
        <TextBox x:Name="LogBox" HorizontalAlignment="Left" Margin="167,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="633" Height="69" TextChanged="LogBox_TextChanged" />
        <ComboBox x:Name="DropBoxLanguage" HorizontalAlignment="Left" Margin="149,24,0,0" VerticalAlignment="Top" Width="64" RenderTransformOrigin="0.384,1.394" Height="27" SelectionChanged="DropBoxLanguage_SelectionChanged"/>
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Left" Margin="693,265,0,0" VerticalAlignment="Top" Width="79" Click="SubmitButton_Click" Style="{DynamicResource ButtonStyle}"/>
        <Button x:Name="RunAndTests" Content="Run and Tests" HorizontalAlignment="Left" Margin="464,265,0,0" VerticalAlignment="Top" Click="RunAndTests_Click" Style="{DynamicResource ButtonStyle}"/>
        <ComboBox x:Name="styleBox" HorizontalAlignment="Left" Margin="19,24,0,0" VerticalAlignment="Top" Width="64" Height="27"/>
        <Label x:Name="Thems" Content="Теми інтерфейсу" HorizontalAlignment="Left" Margin="0,-2,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Programming_language" Content="Мови програмування" HorizontalAlignment="Left" Margin="116,0,0,0" VerticalAlignment="Top" />


    </Grid>
</Window>
